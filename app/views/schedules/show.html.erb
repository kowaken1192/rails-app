<h3>予定一覧</h3>

<table>
  <tr>
    <th>タイトル</th>
    <td><%= @schedule.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <% if @schedule.start_date %>
      <td><%= @schedule.start_date.to_formatted_s(:custom_format) %></td>
    <% else %>
      <td></td>
    <% end %>
  </tr>
  <tr>
    <th>終了日</th>
    <% if @schedule.end_date %>
      <td><%= @schedule.end_date.to_formatted_s(:custom_format) %></td>
    <% else %>
      <td></td>
    <% end %>
  </tr>
  <tr>
    <th>終日</th>
    <td><% if @schedule.all_day == true %>
        <% else @schedule.all_day == false %></td>
    <% end %>
  </tr>
  <tr>
    <th>更新日</th>
    <td><%= @schedule.updated_at.to_formatted_s(:datetime_jp) %></td>
  </tr>
  <tr>
    <th>スケジュールメモ</th>
    <td><%= @schedule.memo %></td>
  </tr>
</table>

<div>
  <%= link_to "予定一覧に戻る", schedules_path %>
</div>

