<%= form_with model: @schedule do |f| %>
  <%= render "schedules/error", obj: @schedule %>

  <table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title%></td>
    </tr>

    <tr>
      <th><%= f.label :start_date ,"開始日" %></th>
      <td><%= f.date_select :start_date,class: "datepicker" %></td>
    </tr>

    <tr>
      <th><%= f.label :end_date ,"終了日" %></th>
      <td><%= f.date_select :end_date,class: "datepicker" %></td>
    </tr>

    <tr>
      <th><%= f.label :all_day ,"終日" %></th>
      <td> <%= f.check_box :all_day %>終日の場合はチェックを入れます</td>      
    </tr>

    <tr>
      <th><%= f.label :memo ,"スケジュールメモ" %></th>
      <td><%= f.text_area :memo %></td>      
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "登録完了する"%></li>
      <li><%= link_to "スケジュール一覧に戻る", schedules_path %></li>
    </ul>
  </div>
<% end %>
